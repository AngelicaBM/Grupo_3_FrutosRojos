<!DOCTYPE html>
<html lang="en">
<!-- Head.ejs -->
<%- include ('../partials/head.ejs') %> 
<body>
    <!-- Header.ejs -->
    <%- include ('../partials/header.ejs')  %> 
    <main class="create_edit-main">
        <div class="formulario-de-create_edit">
            <div class="form-select-create_edit">
                <div class="select1-create">
                <a>
                    <h2>Estás editando el producto:<br><i><%= productToEdit.name %> </i></h2>
                </a>
                </div>
            </div>
            <form class="create_edit" action="/products/edit/<%= productToEdit.id %>?_method=PUT"  method="POST" enctype="multipart/form-data">
                <div class="form-data-create_edit">
                    <label class="create_edit">Nombre del Producto:</label>
                    <input type="text" name="name" id="name" value="<%= productToEdit.name %>" >
                </div>
                <div class="form-data-create_edit">
                    <label class="create_edit">Tipo:</label>
                    <select name="type">
                        <option value="Pastelería" Pastelería <%= productToEdit.type == "Pastelería" ? "selected" : "" %>> Pastelería </option>
                        <option value="Masas" <%= productToEdit.type == "Masas" ? "selected" : "" %>> Masas </option>
                        <option value="Tortas" <%= productToEdit.type == "Tortas" ? "selected" : "" %>> Tortas </option>
                    </select>
                </div>
                <div class="form-data-create_edit">
                    <label class="create_edit">Precio:</label>
                    <input type="number" name="price"  id="price" value="<%= parseInt(productToEdit.price) %>">
                </div>
                <div class="form-data-create_edit">
                    <label class="create_edit">Descuento:</label>
                    <input type="number" name="discount"  id="discount" value="<%= parseInt(productToEdit.discount) %>">
                </div>
                <div class="form-data-create_edit">
                    <label class="create_edit">Imagen:</label>
                    <input type="file" name="image"  id="image" accept=".png, .jpeg .jpg" value="<%= productToEdit.image[0]%>" multiple>
                </div>
                <div class="form-data-create_edit">
                    <label class="create_edit">Descripción:</label>
                    <textarea name="description" id="" cols="30" rows="5"><%= productToEdit.description %></textarea>
                </div>
                <div class="form-data-create_edit">
                    <label class="create_edit">Categoría:</label>
                        <select name="category">
                            <option value="En oferta" <%= productToEdit.category == "En oferta" ? "selected" : "" %>> En oferta </option>
                            <option value="Destacados" <%= productToEdit.category == "Destacados" ? "selected" : "" %>> Destacados </option>
                        </select>
                </div> 
                <div class="form-data-buttons">
                    <button class="form-button" type="submit" Enviar> Actualizar</button>
                </div>
            </form>
        </div>
    </main>
    <!-- Footer.ejs -->
    <%- include ('../partials/footer.ejs') %> 
</body>

</html>